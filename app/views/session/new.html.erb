<h1 align="center">Sign In Page</h1>
<br/><br/>
<div align="center">
  <%= form_tag('/session', method: :post) do %>
    <div class="form-group">
      <%= label_tag(:username) %>
      <%= text_field_tag(:username, nil, class: "form-control")%>
    </div>

    <div class="form-group">
      <%= label_tag(:password) %>
      <%= password_field_tag(:password, nil, class: "form-control") %>
    </div>

    <div class="actions">
      <%= submit_tag("Sign In") %>
    </div>
    
  <% end %>
</div>
<br/>

<div align="center">
  <h3>Login with Google:</h3>
  <br/>
  <%= button_to 'Google', '/auth/google_oauth2/' %>
</div>